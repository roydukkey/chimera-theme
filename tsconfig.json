{
	"compilerOptions": {
		"target": "es2020",
		"lib": [
			"es6",
			"WebWorker"
		],
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./",
		"baseUrl": "./src",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"removeComments": true
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
